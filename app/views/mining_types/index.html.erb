<p style="color: green"><%= notice %></p>
<h1><%= "#{t('mining_types_page')}" %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('desc') %></th>
      <th><%= t('mining_type') %></th>
      <th colspan=3></th>
    </tr>
  </thead>
  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t("show"), mining_type %></td>
        <td><%= link_to t("edit"), edit_mining_type_path(mining_type) %></td>
        <td><%= button_to t("remove"), mining_type, method: :delete, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex gap-2">
<%= link_to t('newminingtype'), new_mining_type_path, class: "btn btn-success ms-2" %>
<%= link_to t("welcomepage"), '/', class: 'btn btn-info' %>
</div>

