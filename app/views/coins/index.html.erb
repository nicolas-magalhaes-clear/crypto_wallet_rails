<p style="color: green"><%= notice %></p>

<h1>Moedas</h1>




<table>

  <thead class="bg-warning p-2">
    <tr>
      <th><%= t('desc') %></th>
      <th><%= t('acronym') %></th>
      <th><%= t('image') %></th>
      <th colspan=3></th>
    </tr>

  </thead>
  <tbody class="bg-info p-2 m-2">
  <% @coins.each do |coin| %>
    <tr class="p-2">
      <td><%= coin.description %> </td>
      <td><%= coin.acronym %> </td>
      <td> <img src="<%= coin.url_image %>" width="40px" height="40px"/> </td>
      <td> <%= link_to t('seecoin'), coin, class: "btn btn-outline-light" %>  </td>
    </tr>
  <% end %>
    <tr>
    <td> <%= link_to t('newcoin'), new_coin_path, class: "btn btn-primary"  %> </td>
    </tr>
  </tbody>
</table>


