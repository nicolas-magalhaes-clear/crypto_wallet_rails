<p style="color: green"><%= notice %></p>
<h1><%= t('coins') %></h1>
<table class="table table-striped">
  <thead class="">
    <tr>
      <th><%= t('desc') %></th>
      <th><%= t('acronym') %></th>
      <th colspan=2><%= t('image') %></th>
      <th colspan=3></th>
    </tr>
  </thead>
  <tbody class="">
    <% @coins.each do |coin| %>
      <tr class="">
        <td><%= coin.description %> </td>
        <td><%= coin.acronym %> </td>
        <td> <img src="<%= coin.url_image %>" width="40px" height="40px"/> </td>
        <td> <%= link_to t('show'), coin, class: "btn btn-info" %>  </td>
        <td><%= link_to t("edit"), edit_coin_path(coin), class: 'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex gap-2">
  <%= link_to t('newcoin'), new_coin_path, class: "btn btn-success"  %>
  <%= link_to t("welcomepage"), '/', class: 'btn btn-info' %>
</div>
